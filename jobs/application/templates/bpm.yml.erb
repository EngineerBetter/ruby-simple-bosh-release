processes:
- name: application
  executable: /var/vcap/packages/ruby/bin/bundle
  args:
  - exec
  - rackup
  - -o
  - 0.0.0.0
  - -p
  - <%= p('port') %>
  - >>
  - $LOG_DIR/application.stdout.log
  - 2>>
  - $LOG_DIR/application.stderr.log
  env:
    RUN_DIR: /var/vcap/sys/run/application
    LOG_DIR: /var/vcap/sys/log/application
    PIDFILE: /var/vcap/sys/run/application/pid


